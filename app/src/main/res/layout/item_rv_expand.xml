<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDetail"
        style="@style/rv_item_expand_text_style"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/transparent"
        android:text="Heello vjbjbjhkjkkn jhjnmn"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLanguage"
        style="@style/rv_item_expand_text_style"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDetail"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/pink_circle"
        android:drawablePadding="@dimen/rv_margin_between_icons_4"
        android:text="C++"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvStarsNumber"
        style="@style/rv_item_expand_text_style"
        app:layout_constraintStart_toEndOf="@+id/tvLanguage"
        app:layout_constraintTop_toBottomOf="@+id/tvDetail"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/star_yellow"
        android:drawablePadding="@dimen/rv_margin_between_icons_4"
        android:paddingLeft="@dimen/margin_16"
        android:text="14,362"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFork"
        style="@style/rv_item_expand_text_style"
        app:layout_constraintStart_toEndOf="@+id/tvStarsNumber"
        app:layout_constraintTop_toBottomOf="@+id/tvDetail"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/fork_black"
        android:drawablePadding="@dimen/rv_margin_between_icons_4"
        android:text="14,362"
        android:paddingLeft="@dimen/margin_16"
        />

</androidx.constraintlayout.widget.ConstraintLayout>